<section>
  <h2>Create a New Post</h2>

  <form>
    <div class="input-field">
      <label for="post-title">Recipe Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div class="input-field">
      <label for="post-url">Enter your recipe here</label>
      <textarea name="post-url" id="post-url" cols="30" rows="10"></textarea>
   
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>